<%- include ../partials/header -%>

<div>
    <h1>Add a New Book</h1>
    <form action="/books" method="POST">
        <div class='form-group'>
                <input class='form-control' type='text' name='title' placeholder='Title'>
            </div>
            
            <div class='form-group'>
                <input class='form-control' type='text' name='author' placeholder='Author(s)'>
            </div>

            <div class='form-group'>
                <input class="form-control" type="number" name="totalPages" placeholder="Number of Pages">
            </div>

            <div class='form-group'>
                <button class='btn btn-primary btn-lg btn-block'>Add</button>
            </div>
    </form>
</div>

<%- include ../partials/footer -%>