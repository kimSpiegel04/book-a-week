<%- include ../partials/header -%>

<p>
    <a class="btn" href="/books/new/">Add a book</a>
</p>

<table style="width: 100%">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Progress</th>
            <th>Finished</th>
        </tr>

        <% books.forEach(function(book) { %>
            <tr>
                <td><%=book.title%></td>
                <td><%=book.author%></td>
            </tr>
        <% }); %>

</table>  

